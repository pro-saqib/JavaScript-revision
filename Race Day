let raceNumber = Math.floor(Math.random() * 1000);
let earlyRunner=true
let runnerAge=25
if(runnerAge > 18 && earlyRunner)
  raceNumber+=1000
if(runnerAge > 18 && earlyRunner)
{
  console.log(`Race number ${raceNumber} will run at 9:30 am`)
} 
else if (runnerAge > 18 && !earlyRunner)
{
console.log(`Race number ${raceNumber} will run at 11:00 am`)
}
else if (runnerAge < 18)
{
console.log(`Race number ${raceNumber} will run at 12:30 pm`)
}
else{
  console.log('Please see the registration desk')
}